<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.heimcontrol.mobile" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.heimcontrol.mobile.Heimcontrol"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.heimcontrol.mobile.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.heimcontrol.mobile.Switches"
            android:label="@string/title_activity_switches" >
        </activity>
        <activity
            android:name="com.heimcontrol.mobile.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.heimcontrol.mobile.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
    </application>

</manifest>
